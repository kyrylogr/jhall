        <tree>
          <field name="name"/>
          <field name="short_name"/>
          <field name="equipment_type_id"/>
          <field name="is_coach_included"/>
          <field name="default_unit_time"/>
          <field name="is_used"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="jhall.v_t_abonement_type">
